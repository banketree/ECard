<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ecard"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".edit_activity" >
        </activity>
        <activity
            android:name=".edit_Round"
            android:label="@string/title_activity_round_activity" >
        </activity>
        <activity
            android:name=".Edit_gray"
            android:label="@string/title_activity_edit_gray" >
        </activity>
        <activity
            android:name=".Edit_rotate"
            android:label="@string/title_activity_edit_rotate" >
        </activity>
        <activity
            android:name=".Edit_reflection"
            android:label="@string/title_activity_edit_reflection" >
        </activity>
    </application>

    <!-- Camera -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

</manifest>
